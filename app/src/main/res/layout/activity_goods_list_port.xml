<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/user_title_linear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/id_tv"
            android:layout_width="147dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:text="编号"

            android:textSize="20sp" />

        <TextView
            android:id="@+id/goods_name_tv"
            android:layout_width="156dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:text="产品"

            android:textSize="20sp" />

        <TextView
            android:id="@+id/amount_tv"
            android:layout_width="77dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:text="数量"

            android:textSize="20sp" />
    </LinearLayout>
    <TextView
        android:id="@+id/devide_line_tv"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/user_title_linear"
        android:background="@android:color/background_dark" />
    <ListView
        android:id="@+id/goods_lv"
        android:layout_width="match_parent"
        android:layout_height="559dp"
        android:layout_below="@id/devide_line_tv"/>

    <Button
        android:id="@+id/select_bt"
        android:layout_width="108dp"
        android:layout_height="33dp"
        android:layout_below="@+id/goods_lv"
        android:layout_marginLeft="60px"

        android:layout_marginTop="15dp"
        android:background="#4DABDD"
        android:text="查询"
        android:textColor="#ffffff"
        android:textSize="60px" />
    <Button
        android:id="@+id/exit_bt"
        android:layout_width="250dp"
        android:layout_height="33dp"
        android:layout_below="@+id/import_bt"

        android:layout_marginLeft="200px"

        android:layout_marginTop="15dp"
        android:background="#4DABDD"
        android:text="退 出"
        android:textColor="#ffffff"
        android:textSize="60px" />
    <Button
        android:id="@+id/import_bt"
        android:layout_width="108dp"
        android:layout_height="33dp"
        android:background="#4DABDD"
        android:layout_below="@+id/goods_lv"
        android:layout_toRightOf="@+id/select_bt"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="50px"
        android:text="入库"
        android:textColor="#ffffff"
        android:textSize="60px" />
    <Button
        android:id="@+id/export_bt"
        android:layout_width="108dp"
        android:layout_height="33dp"
        android:background="#4DABDD"
        android:layout_below="@+id/goods_lv"
        android:layout_toRightOf="@+id/import_bt"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="50px"
        android:text="出库"
        android:textColor="#ffffff"
        android:textSize="60px" />


</RelativeLayout>
