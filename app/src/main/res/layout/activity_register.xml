<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/activity_login"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="425dp"
        android:layout_height="277dp">

        <ImageView
            android:id="@+id/gym_image"
            android:layout_width="413dp"
            android:layout_height="match_parent"
            android:src="@mipmap/store3" />

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >

        <TextView
            android:id="@+id/title_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="260px"
            android:layout_marginTop="15px"
            android:text="超级管理员注册"
            android:textSize="80px" />

        <EditText
            android:id="@+id/username_ed"
            android:layout_width="397dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/title_txt"
            android:layout_marginTop="20px"
            android:layout_marginLeft="10px"
            android:hint="请输入用户名"
            />

        <EditText
            android:id="@+id/password_ed"
            android:layout_width="397dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/username_ed"
            android:layout_marginTop="20px"
            android:layout_marginLeft="10px"
            android:hint="请输入密码" />
        <EditText
            android:id="@+id/repassword_ed"
            android:layout_width="397dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20px"
            android:layout_marginLeft="10px"
            android:layout_below="@+id/password_ed"
            android:hint="请确认输入密码" />

        <Button
            android:id="@+id/register_bt"
            android:layout_width="match_parent"
            android:layout_height="37dp"
            android:layout_below="@id/repassword_ed"
            android:layout_marginTop="20px"
            android:background="#5ABC4F"
            android:text="注册"

            android:textColor="#ffffff" />
        <Button
            android:id="@+id/exit_bt"
            android:layout_width="match_parent"
            android:layout_height="37dp"
            android:layout_below="@id/register_bt"
            android:layout_marginTop="15px"

            android:background="#C2CCCE"
            android:text="返回"/>

    </RelativeLayout>
</LinearLayout>
