<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/user_title_linear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/username_tv"
            android:layout_width="147dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:text="用户名"

            android:textSize="20sp" />

        <TextView
            android:id="@+id/password_tv"
            android:layout_width="156dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:text="密码"

            android:textSize="20sp" />

        <TextView
            android:id="@+id/power_tv"
            android:layout_width="77dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:text="权限"

            android:textSize="20sp" />
    </LinearLayout>
    <TextView
        android:id="@+id/devide_line_tv"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/user_title_linear"
        android:background="@android:color/background_dark" />
    <ListView
        android:id="@+id/user_lv"
        android:layout_width="match_parent"
        android:layout_height="559dp"
        android:layout_below="@id/devide_line_tv"/>
    <Button
        android:id="@+id/insert_bt"
        android:layout_width="108dp"
        android:layout_height="33dp"
        android:layout_below="@+id/user_lv"
        android:layout_marginLeft="50px"

        android:layout_marginTop="15dp"
        android:background="#5ABC4F"
        android:text="添加"
        android:textColor="#ffffff"
        android:textSize="60px" />
    <Button
        android:id="@+id/select_bt"
        android:layout_width="108dp"
        android:layout_height="33dp"
        android:layout_below="@+id/user_lv"
        android:layout_toRightOf="@+id/insert_bt"
        android:layout_marginLeft="50px"

        android:layout_marginTop="15dp"
        android:background="#5ABC4F"
        android:text="查询"
        android:textColor="#ffffff"
        android:textSize="60px" />
    <Button
        android:id="@+id/exit_bt"
        android:layout_width="108dp"
        android:layout_height="33dp"
        android:layout_below="@+id/user_lv"
        android:layout_toRightOf="@+id/select_bt"
        android:layout_marginLeft="50px"

        android:layout_marginTop="15dp"
        android:background="#5ABC4F"
        android:text="退出"
        android:textColor="#ffffff"
        android:textSize="60px" />


</RelativeLayout>
